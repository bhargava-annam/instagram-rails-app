<div class="container">
<br>
<br>
<br>
<div class="card">
  <div class="card-header">
    <h2>Log in</h2>

  </div>
  <div class="card-body">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
   <br>

  <div class="field form-group row">
    <%= f.label :email, class:"col-form-label col-sm-3"  %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control col-sm-8",placeholder:'abc@gmail.com' %>
  </div>

  <div class="field form-group row">
    <%= f.label :password , class:"col-form-label col-sm-3"%><br />
    <%= f.password_field :password, autocomplete: "current-password",class:"form-control col-sm-8" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
  <br>

  <div class="actions">
    <%= f.submit "Log in" , class:"btn btn-secondary"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
  </div>
</div>
</div>


