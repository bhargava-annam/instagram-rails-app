<div class="show">  
   <% if @pic.image.attached? %>
     <img src="<%=(url_for(@pic.image))%>">
   <% end %>
   <h1>
     <%= @pic.title %>
   </h1>
   <p>
     <%= @pic.description %>
     <br>
    <% if @pic.user !=  current_user %>
    <br><br>
    <% end %>
   </p>
</div>
<div class="btn-group">
                <%= link_to 'Back', root_path ,class:"btn btn-primary"%>
              <% if user_signed_in? %>
              
                 <% if @pic.user ==  current_user || current_user.admin  %>
                  <%= link_to 'Edit', edit_pic_path,class:"btn btn-secondary" %>
                  <%= link_to 'Delete', pic_path, method: :delete, data:{ confirm: "Are you sure..?"} ,class:"btn btn-danger" %>
                 <% end %>
              <% end %>
 </div>





         
         



